@model ClaimsProcessing.Models.Claim
@{
    ViewData["Title"] = "Delete Claim";
}

<h1>Delete Claim</h1>
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@Model.PolicyNumber - @Model.ClaimType</h4>
    <dl class="row">
        <dt class="col-sm-2">Amount</dt>
        <dd class="col-sm-10">@Model.ClaimAmount</dd>
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ClaimId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>


