@model ClaimsProcessing.Models.Claim
@{
    ViewData["Title"] = "Create Claim";
}

<h1>Create Claim</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="PolicyNumber"></label>
        <input asp-for="PolicyNumber" class="form-control" />
        <span asp-validation-for="PolicyNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ClaimType"></label>
        <input asp-for="ClaimType" class="form-control" />
        <span asp-validation-for="ClaimType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ClaimAmount"></label>
        <input asp-for="ClaimAmount" class="form-control" />
        <span asp-validation-for="ClaimAmount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Status"></label>
        <input asp-for="Status" class="form-control" />
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AgentId"></label>
        <input asp-for="AgentId" class="form-control" />
        <span asp-validation-for="AgentId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


